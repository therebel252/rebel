<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addons>
<addon id="plugin.video.rebel" name="Rebel Sports" version="1.6" provider-name="Rebel">
  <requires>
    <import addon="xbmc.python" version="2.1.0"/>
	<import addon="script.module.addon.common" />
  </requires>
  <extension point="xbmc.python.pluginsource" library="init.py">
        <provides>video</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
    <summary lang="en"></summary>
	<website>http://rebelsports.me</website>
<description lang="en">Please visit http://rebelsports.me/purchase to signup to Rebel Sports
        </description>
    <platform>all</platform>
  </extension>
</addon>

<addon id="repository.rebel" name="Rebel Sports and Entertainment Repository" version="1.2" provider-name="The Rebels">
	<extension point="xbmc.addon.repository" name="Rebel Sports and Entertainment Repository">
		<info compressed="false">https://raw.githubusercontent.com/therebel252/rebel/master/addons.xml</info>
		<checksum>https://raw.githubusercontent.com/therebel252/rebel/master/addons.xml.md5</checksum>
		<datadir zip="true">https://raw.githubusercontent.com/therebel252/rebel/master/zips</datadir>
	</extension>
	<extension point="xbmc.addon.metadata">
		<summary></summary>
		<description></description>
		<platform>all</platform>
	</extension>
</addon>
</addons>
